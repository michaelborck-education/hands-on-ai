name: PEP 517 Compliance

on:
  pull_request:
  push:
    branches: [main]

jobs:
  pep517-build-test:
    name: âœ¨ PEP 517 Build Validation
    runs-on: ubuntu-latest

    steps:
      - name: ðŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      - name: ðŸ³ Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: ðŸ¦„ Install build tool and dependencies
        run: pip install build wheel cython

      - name: ðŸ”§ Run PEP 517 Build
        run: python -m build --no-isolation --wheel

      - name: âœ… Check for valid wheel
        run: |
          if [ -z "$(ls dist/*.whl 2>/dev/null)" ]; then
            echo "No wheel file found. Build failed."
            exit 1
          else
            echo "Build succeeded. Wheel created."
          fi
